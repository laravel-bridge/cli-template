<?xml version="1.0"?>
<ruleset>
    <!-- display progress and sniff -->
    <arg value="p"/>
    <arg value="s"/>

    <!-- use colors in output -->
    <arg name="colors"/>

    <!-- check the php syntax -->
    <rule ref="Generic.PHP.Syntax"/>

    <!-- inherit rules from: -->
    <rule ref="PSR12"/>

    <!-- Paths and file to check -->
    <file>app</file>
    <file>tests</file>

    <exclude-pattern>app/templates</exclude-pattern>
    <exclude-pattern>app/Version.php</exclude-pattern>
</ruleset>
